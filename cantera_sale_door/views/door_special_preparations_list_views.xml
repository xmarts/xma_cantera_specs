<odoo>
  <data>

        <record id="door_special_preparations_list_view_tree" model="ir.ui.view">
            <field name="name">door.special.preparations.list.view.tree</field>
            <field name="model">door.special.preparations.list</field>
            <field name="arch" type="xml">
                <tree editable="bottom" string="Lista Preparaciones Especiales">
                    <field name="name"/>
                    <field name="price" widget="monetary"/> 
                </tree>
            </field>
        </record>

        <record id="action_door_special_preparations_list" model="ir.actions.act_window">
            <field name="name">Lista Preparaciones Especiales</field>
            <field name="res_model">door.special.preparations.list</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="door_special_preparations_list_sub_menu" name="Lista Preparaciones Especiales" action="action_door_special_preparations_list" parent="cantera_sale_door.protections_indicator" sequence="4"/>

  </data>
</odoo>