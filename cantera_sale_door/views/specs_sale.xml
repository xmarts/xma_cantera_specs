<odoo>
  <data>
    <record id="specs_sale_view_form" model="ir.ui.view">
            <field name="name">specs.sale.view.form</field>
            <field name="model">specs.sale</field>
            <field name="arch" type="xml">
                <form string="specs">
                    <sheet>
                        <group>
                            <group>
                                <field name="specs_type"/>
                                <field name="name_specs" invisible='1'/>
                            </group>
                            <group>
                                <group>
                                    <div>
                                        <label for="specs_amount_total" groups='cantera_sale_door.cant_ventas,cantera_sale_door.cant_administrador'/>
                                        <h1><field name="specs_amount_total" string="" widget='monetary' readonly='1' groups='cantera_sale_door.cant_ventas,cantera_sale_door.cant_administrador'/></h1>
                                    </div>
                                </group>
                            </group>
                        </group>
                        <notebook>
                            <page string="Cotizador">
                                <group string="Header">
                                    <group>
                                        <field name="specs_sale_id" required='1' readonly="context.get('default_specs_sale_id')"/>
                                        <field name="specs_leads_id"/>
                                        <field name="specs_product_id"/>
                                        <field name="specs_dc_id" attrs="{'invisible': [('specs_type', '=', 'railing')]}"/>
                                    </group>
                                    <group>
                                        <field name="specs_design_id"/>
                                        <field name="specs_color_id"/>
                                        <field name="specs_level_id"/>
                                        <field name="specs_mtrs" readonly='1'/>
                                        <field name="specs_suffix_id" attrs="{'invisible': [('specs_type', '!=', 'door')]}"/>
                                    </group>
                                </group>
                                <group string="Generales">
                                    <group>
                                        <field name="specs_ant"/>
                                        <field name="specs_alt"/>
                                        <field name="specs_antmarc" attrs="{'invisible': [('specs_type', '=', 'railing')]}"/>
                                        <field name="specs_altmarc" attrs="{'invisible': [('specs_type', '=', 'railing')]}"/>
                                        <field name="specs_bast" attrs="{'invisible': [('specs_type', '=', 'railing')]}"/>
                                        <field name="specs_porfbast" attrs="{'invisible': [('specs_type', '=', 'railing')]}"/>
                                        <field name="specs_antleaft" attrs="{'invisible': [('specs_type', '=', 'railing')]}"/>
                                        <field name="specs_altleaft" attrs="{'invisible': [('specs_type', '=', 'railing')]}"/>
                                        <field name="specs_board_id" attrs="{'invisible': [('specs_type', '!=', 'door')]}"/>
                                        <field name="specs_altboard" attrs="{'invisible': [('specs_type', '!=', 'door')]}"/>
                                        <field name="specs_tramrec" attrs="{'invisible': [('specs_type', '!=', 'railing')]}"/>
                                        <field name="specs_traminc" attrs="{'invisible': [('specs_type', '!=', 'railing')]}"/>
                                        <field name="specs_tramcurniv" attrs="{'invisible': [('specs_type', '!=', 'railing')]}"/>
                                        <field name="specs_tramcurin" attrs="{'invisible': [('specs_type', '!=', 'railing')]}"/>
                                        <field name="specs_pasrec" attrs="{'invisible': [('specs_type', '!=', 'railing')]}"/>
                                        <field name="specs_handing_id" attrs="{'invisible': [('specs_type', '=', 'railing')]}"/>
                                        <field name="specs_newdec" attrs="{'invisible': [('specs_type', '!=', 'railing')]}"/>
                                        <field name="specs_huacal"/>
                                    </group>
                                    <group>
                                        <field name="specs_forging_id"/>
                                        <field name="specs_operable" attrs="{'invisible': [('specs_type', '!=', 'door')]}"/>
                                        <field name="specs_type_arc_id" attrs="{'invisible': [('specs_type', '!=', 'door')]}"/>
                                        <field name="specs_altarc" attrs="{'invisible': [('specs_type', '=', 'railing')]}"/>
                                        <field name="specs_tolsup" attrs="{'invisible': [('specs_type', '=', 'railing')]}"/>
                                        <field name="specs_tolcen" attrs="{'invisible': [('specs_type', '=', 'railing')]}"/>
                                        <field name="specs_tollat" attrs="{'invisible': [('specs_type', '=', 'railing')]}"/>
                                        <field name="specs_glass" attrs="{'invisible': [('specs_type', '!=', 'door')]}"/>
                                        <field name="specs_type_glass_id" attrs="{'invisible': [('specs_type', '=', 'railing')]}"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Frame" attrs="{'invisible': [('specs_type', '=', 'railing')]}">
                                        <field name="specs_ancmarc" attrs="{'invisible': [('specs_type', '=', 'railing')]}"/>
                                        <field name="specs_profmarc" attrs="{'invisible': [('specs_type', '=', 'railing')]}"/>
                                        <field name="specs_anchor_id" attrs="{'invisible': [('specs_type', '=', 'railing')]}"/>
                                        <field name="specs_hinges_id" attrs="{'invisible': [('specs_type', '=', 'railing')]}"/>
                                        <field name="specs_amount_hinges" attrs="{'invisible': [('specs_type', '=', 'railing')]}"/>
                                    </group>
                                    <group string="Frame Brickmolding" attrs="{'invisible': [('specs_type', '=', 'railing')]}">
                                        <field name="specs_molding_int_id"/>
                                        <field name="specs_traslape_int_id"/>
                                        <field name="specs_molding_ext_id"/>
                                        <field name="specs_traslape_ext_id"/>
                                    </group>
                                </group>
                                <group string="Pull Handles" attrs="{'invisible': [('specs_type', '!=', 'door')]}">
                                    <group>
                                        <field name="specs_jac_id"/>
                                        <field name="specs_jacin_id"/>
                                    </group>
                                    <group>
                                        <field name="specs_jin_id"/>
                                        <field name="specs_jinin_id"/>
                                    </group>
                                </group>
                                <group string='Deadbolt' attrs="{'invisible': [('specs_type', '!=', 'door')]}">
                                    <group>
                                        <field name="specs_pch_id"/>
                                        <field name="specs_moce_id"/>
                                        <field name="specs_altce"/>
                                    </group>
                                    <group>
                                        <field name="specs_mbas"/>
                                        <field name="specs_mbai"/>
                                        <field name="specs_rlat"/>
                                        <field name="specs_bac"/>
                                    </group>
                                </group>
                                <group>
                                    <group string='Transom' attrs="{'invisible': ['|', ('specs_type', '=', 'railing'), ('specs_type', '=', 'windows')]}">
                                        <field name="specs_tyarct_id" attrs="{'invisible': [('specs_type', '=', 'railing')]}"/>
                                        <field name="specs_typet_glass_id" attrs="{'invisible': [('specs_type', '=', 'railing')]}"/>
                                        <field name="specs_altarct"  attrs="{'invisible': [('specs_type', '=', 'windows')]}"/>
                                        <field name="specs_antra" attrs="{'invisible': [('specs_type', '=', 'windows')]}"/>
                                        <field name="specs_altra" attrs="{'invisible': [('specs_type', '=', 'windows')]}"/>
                                        <field name="specs_ddm" attrs="{'invisible': [('specs_type', '=', 'windows')]}"/>
                                        <field name="specs_altpc" attrs="{'invisible': [('specs_type', '!=', 'windows')]}"/>
                                        <field name="specs_anpc" attrs="{'invisible': [('specs_type', '!=', 'windows')]}"/>
                                        <field name="railing_id" invisible='1'/>   
                                    </group>
                                    <group string='Sidelight' attrs="{'invisible': ['|', ('specs_type', '=', 'railing'), ('specs_type', '=', 'windows')]}">
                                        <field name="specs_anfi"/>
                                        <field name="specs_alfi"/>
                                        <field name="specs_board_type_id"/>
                                        <field name="specs_altboard_type"/>
                                        <field name="specs_posfi_id"/>
                                        <field name="specs_ddmf"/>
                                        <field name="specs_glassf"/>
                                        <field name="specs_typef_glass_id"/>
                                    </group>
                                </group>
                                <field name="specs_line_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="accessories_id"/>
                                        <field name="amount_accessories"/>
                                    </tree>
                                </field>
                                <group>
                                    <group string='Latch' attrs="{'invisible': [('specs_type', '=', 'railing')]}">
                                        <field name="specs_latchsup_id" attrs="{'invisible': [('specs_type', '=', 'windows')]}"/>
                                        <field name="specs_cls" attrs="{'invisible': [('specs_type', '=', 'windows')]}"/>
                                        <field name="specs_latchin_id" attrs="{'invisible': [('specs_type', '=', 'windows')]}"/>
                                        <field name="specs_cli" attrs="{'invisible': [('specs_type', '=', 'windows')]}"/>
                                    </group>
                                    <group string='protections' attrs="{'invisible': [('specs_type', '=', 'railing')]}">
                                        <field name="specs_tolerance" attrs="{'invisible': [('specs_type', '=', 'windows')]}"/>
                                        <field name="specs_typeguar_id" attrs="{'invisible': [('specs_type', '=', 'windows')]}"/>
                                        <field name="specs_flashing_id"/>
                                        <field name="specs_assembly_id"/>
                                    </group>
                                </group>
                                <field name="specs_sp_line_ids" attrs="{'invisible': [('specs_type', '=', 'railing')]}">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="preparations_id"/>
                                        <field name="amount_preparations"/>
                                    </tree>
                                </field>
                                <group>
                                    <field name="description"/>
                                </group>
                                <field name="specs_glass_line_ids"  attrs="{'invisible': [('specs_type', '=', 'railing')]}">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="glass_piece_id"/>
                                        <field name="handing_glass_id"/>
                                        <field name="glass_type_id"/>
                                        <field name="radius_id"/>
                                        <field name="glass_width"/> 
                                        <field name="glass_height"/> 
                                        <field name="glass_qty"/>
                                        <field name="amount_glass"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="specs_sale_view_tree" model="ir.ui.view">
            <field name="name">specs.sale.view.tree</field>
            <field name="model">specs.sale</field>
            <field name="arch" type="xml">
                <tree string="Specs">
                    <field name="specs_type"/>
                    <field name="opportunity_specs"/>
                    <field name="specs_sale_id"/>
                    <field name="specs_leads_id"/>
                </tree>
            </field>
        </record>

        <record id="action_specs_sale" model="ir.actions.act_window">
            <field name="name">specs</field>
            <field name="res_model">specs.sale</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="specs_sale_sub_menu" name="specs" action="action_specs_sale" parent="sale.menu_sale_config" sequence="99"/>

  </data>
</odoo>