<odoo>
  <data>

        <record id="door_special_preparations_view_tree" model="ir.ui.view">
            <field name="name">door.special.preparations.view.tree</field>
            <field name="model">door.special.preparations</field>
            <field name="arch" type="xml">
                <tree editable="bottom" string="Preparaciones Especiales">
                    <field name="preparations_id"/>
                    <field name="amount_preparations"/> 
                    <field name="sequence" invisible='1'/>
                    <field name="prep_id" invisible='1'/>
                </tree>
            </field>
        </record>

        <record id="action_door_special_preparations" model="ir.actions.act_window">
            <field name="name">Preparaciones Especiales</field>
            <field name="res_model">door.special.preparations</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="door_special_preparations_sub_menu" name="Preparaciones Especiales" action="action_door_special_preparations" parent="cantera_sale_door.protections_indicator" sequence="5"/>

  </data>
</odoo>