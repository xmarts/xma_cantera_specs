<odoo>
  <data>

        <record id="door_board_view_tree" model="ir.ui.view">
            <field name="name">door.board.view.tree</field>
            <field name="model">door.board</field>
            <field name="arch" type="xml">
                <tree editable="bottom" string="Tablero">
                    <field name="name"/>
                    <field name="price" widget="monetary"/> 
                </tree>
            </field>
        </record>

        <record id="action_door_board" model="ir.actions.act_window">
            <field name="name">Tablero</field>
            <field name="res_model">door.board</field>
            <field name="view_mode">tree</field>
        </record>

        
        <menuitem id="general_indicator" name="General" parent="offering_menu" sequence="2"/>
            <menuitem id="door_board_sub_menu" name="Tablero" action="action_door_board" parent="general_indicator" sequence="2"/>

  </data>
</odoo>