<odoo>
  <data>

        <record id="door_glass_piece_view_tree" model="ir.ui.view">
            <field name="name">door.glass.piece.view.tree</field>
            <field name="model">door.glass.piece</field>
            <field name="arch" type="xml">
                <tree editable="bottom" string="ID Pieza de Vidrio">
                    <field name="name"/>
                    <field name="price" widget="monetary"/> 
                </tree>
            </field>
        </record>

        <record id="action_door_glass_piece" model="ir.actions.act_window">
            <field name="name">ID Pieza de Vidrio</field>
            <field name="res_model">door.glass.piece</field>
            <field name="view_mode">tree</field>
        </record>

        
         <menuitem id="glass_specs_indicator" name="GLASS SPECs" parent="offering_menu" sequence="11"/>
            <menuitem id="door_glass_piece_sub_menu" name="ID Pieza de Vidrio" action="action_door_glass_piece" parent="glass_specs_indicator" sequence="1"/>

  </data>
</odoo>