<odoo>
  <data>

        <record id="door_glass_specs_view_tree" model="ir.ui.view">
            <field name="name">door.glass.specs.view.tree</field>
            <field name="model">door.glass.specs</field>
            <field name="arch" type="xml">
                <tree editable="bottom" string="Glass Specs">
                    <field name="glass_piece_id"/>
                    <field name="handing_glass_id"/>
                    <field name="glass_type_id"/>
                    <field name="radius_id"/>
                    <field name="amount_glass"/>
                    <field name="glass_width"/> 
                    <field name="glass_height"/> 
                    <field name="glass_qty"/> 
                    <field name="sequence" invisible='1'/>
                    <field name="glass_id" invisible='1'/>
                </tree>
            </field>
        </record>

        <record id="action_door_glass_specs" model="ir.actions.act_window">
            <field name="name">Glass Specs</field>
            <field name="res_model">door.glass.specs</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="door_glass_specs_sub_menu" name="Glass Specs" action="action_door_glass_specs" parent="cantera_sale_door.glass_specs_indicator" sequence="4"/>

  </data>
</odoo>